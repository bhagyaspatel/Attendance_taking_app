<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextTheme" parent="TextAppearance.AppCompat" >
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#A6171616</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <!--    customizing (overwriting the atributes of parent) our theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="Header" parent="TextAppearance.AppCompat" >
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeaderSmall" parent="@style/Header" >
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>