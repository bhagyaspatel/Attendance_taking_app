<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:contentPadding="10dp"
    app:cardBackgroundColor="#EEEC7B7B"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="3dp">

    <!--  dont give theme in this constraint layout, it will crash-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/absentUsnLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USN :"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/absentNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/absentUsnLabel" />

        <TextView
            android:id="@+id/absentUsn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1MS20IS084"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/absentUsnLabel"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/absentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Patel Bhagya"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/absentNameLabel"
            app:layout_constraintTop_toBottomOf="@id/absentUsn" />

        <TextView
            android:id="@+id/monthAbsentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This month :"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/absentNameLabel" />

        <TextView
            android:id="@+id/monthAbsent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="0"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toEndOf="@id/monthAbsentLabel"
            app:layout_constraintTop_toBottomOf="@id/absentName" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>