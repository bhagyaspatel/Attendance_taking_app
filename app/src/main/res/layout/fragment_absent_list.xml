<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.AbsentListFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/teal_200"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/toolbar_layout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/absenttListTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Of Absent Students"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_marginTop="15dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/absent_student_list_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/absenttListTxt"
        tools:listitem="@layout/absent_item_list" />

</androidx.constraintlayout.widget.ConstraintLayout>